<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/logimg"
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="250dp"/>

            <EditText
                android:id="@+id/email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_view"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="30dp"
                android:drawableStart="@drawable/ic_email"
                android:hint="Email"
                android:inputType="textEmailAddress" />
            <EditText

                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_id"
                android:layout_marginLeft="40dp"

                android:layout_marginRight="40dp"
                android:layout_marginTop="30dp"
                android:drawableStart="@drawable/ic_password"
                android:hint="Password"
                android:inputType="textPassword" />


            <TextView
                android:id="@+id/txt_forgetPassword"
                android:layout_below="@+id/edt_password"
                android:layout_marginLeft="200dp"

                android:textSize="17sp"
                android:textColor="#333"

                android:text="Forget Password ?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/login_btn"
                android:layout_below="@+id/txt_forgetPassword"
                android:layout_width="match_parent"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:text="Login"
                android:background="#7283E2"

                android:textColor="#ffff"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"/>

            <TextView
               android:id="@+id/txt_newUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_btn"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="Need New Account ?"
                android:gravity="center"
                android:textColor="#333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_loginUsing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_newUser"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="or Login using your?"
                android:gravity="center"
                android:textColor="#333"
                android:textSize="18sp"
                android:textStyle="bold" />



            <Button
                android:id="@+id/phone_login"
                android:layout_below="@+id/txt_loginUsing"
                android:layout_width="match_parent"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:text="Phone"
                android:background="#7283E2"
                 android:layout_marginBottom="20dp"
                android:textColor="#333"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginTop="30dp"
                android:drawableStart="@drawable/ic_phone"
                android:layout_height="wrap_content"/>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>