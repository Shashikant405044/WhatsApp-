<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactFragment">

    <!-- TODO: Update blank fragment layout -->
   <TextView
       android:id="@+id/time_slot"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="20dp"
       android:text="Select Time Slot"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/time_recyclerView"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/time_slot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Select Services"
        android:id="@+id/protxt"
        android:layout_below="@id/time_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pro_main_recylerview"
        android:layout_below="@+id/protxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/pro_main_recylerview"
        android:background="@drawable/rounded"
        android:layout_marginBottom="5dp"
        android:textColor="#ffff"
        android:text="Total Amount Rs.545 Continue"
        android:gravity="center"
        android:id="@+id/btnamount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</RelativeLayout>